<div class="LOG_IN">
  <h2>로그인</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%#= f.label :email %>
      <%= f.email_field :email, class: 'form-field', placeholder: "아이디", autofocus: true %>
    </div>
  
    <div class="field">
      <%#= f.label :password %><br />
      <%= f.password_field :password, class: 'form-field', placeholder: "비밀번호", autocomplete: "off" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :아이디저장 %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "로그인", class:'action-login' %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links"%>
</div>


<style>
body {
  background-color: #F5FAF6;
}
.LOG_IN {
  text-align: center;
  height: 33em;
  width: 33em;
  position: static;
  display: block;
  border: 3px groove green;
  background-color: #FFF;
  padding: 20px;
  margin: 100px auto;

}
h2 {
  margin-bottom: 20px;
  font-size: 60px;
  color: black;
}
.field {
  font-size: 15px;
  margin-top: 10px;
}
.form-field {
  width: 250px;
  height: 50px;
  padding: 10px;
}
.action-login {
  width: 250px;
  height: 50px;
  text-align: center;
  background-color: green;
  color: #FFF;
  line-height: 50px;
  border: none;
}
.action-login:hover {
  width: 250px;
  height: 50px;
  text-align: center;
  background-color: #07c407;
  color: #FFF;
  line-height: 50px;
  border: none;
}


</style>