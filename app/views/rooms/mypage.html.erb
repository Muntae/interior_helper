<div class="container" style="margin-top: 1em;">
  <div class="row">
    <div class="col-md-1 col-md-offset-11">
      <a href="/new"><span class="glyphicon glyphicon-plus" aria-hidden="true" id="add_btn"></span></a>
    </div>
  </div>
  <% if @rooms.nil? %>
    <p>방을 만들어 주세요..</p>
  <% else %>
    <% @rooms.each do |rooms| %>
      <% if @count % 3 == 0 %>
        <div class="row">
      <% else %>
      <% end %>
      <div class="col-md-4">
        <a href="/room/<%= rooms.id %>" style="text-decoration: none;">
          <div class="thumbnail">
            <img src="/assets/roomImg2.jpg" alt="img">
            <div class="caption">
              <p style="color: black;" class="room-title"><%= rooms.title %></p>
              <a href="/destroy_room/<%=rooms.id %>"><button>삭제</button></a>
            </div>
          </div>
        </a>
      </div>
      <% @count += 1 %>
      <% if @count % 3 == 0 %>
        </div>
      <% else %>
      <% end %>
    <% end %>
  <% end %>
</div>